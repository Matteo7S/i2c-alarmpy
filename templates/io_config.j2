{% extends "layout.j2" %}
{% block title %}IO Configuration{% endblock %}
{% block body %}
    <div class="container">
        {% if error %}
        <div class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            {{ error }}
        </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">IO Interfaces</h3>
            </div>
            <div class="panel-body">
                <table class="table">
                    <tr>
                        <th>ID</th>
                        <th>Type</th>
                        <th>Bus</th>
                        <th>Address</th>
                        <th>Delete</th>
                    </tr>
                {% for io in ios %}
                <tr>
                    <td>{{ io["io_id"] }}</td>
                    <td>{{ smbio.IOTYPES[io["type"]] }}</td>
                    <td>{{ io["bus"] }}</td>
                    <td>{{ io["addr_hex"] }}</td>
                    <td>
                        <form method="DELETE" action="{{ url_for('io_config') }}">
                            <input type="hidden" name="id" value="{{ io['io_id'] }}">
                            <button class="btn btn-primary btn-block" type="submit">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            </button>
                        </form>
                    </td>
                </tr>
                {% endfor %}
                </table>
            </div>
        </div>
        <form method="POST" action="{{ url_for('io_config') }}">
            <div class="row">
                <div class="col-md-3">
                    <label for="inputType">Type</label>
                    <select id="inputType" class="form-control" name=type required>
                        {% for key in  smbio.IOTYPES %}
                        <option value="{{ key }}">{{ smbio.IOTYPES[key] }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="inputBus">Bus</label>
                    <input type="number" min="0" max="99" id="inputBus" class="form-control" placeholder="Bus" name=bus required>
                </div>
                <div class="col-md-3">
                    <label for="inputAddr">Hex Address</label>
                    <input type="text" id="inputAddr" class="form-control" placeholder="Address" name=addr required>
                </div>
                <div class="col-md-3"><button class="form-control btn btn-default" type="submit">Add</button></div>
            </div>

        </form>

    </div> <!-- /container -->
{% endblock %}
